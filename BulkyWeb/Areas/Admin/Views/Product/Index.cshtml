@model IEnumerable<Product>;

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Product List</h2>
            </div>
        </div>
    </div>
    <div class="card-body ">
        <div class="row pt-2 pb-4">

            <div class="col-12 text-end">
                <a asp-area="Admin" asp-controller="Product" asp-action="Upsert" class="btn btn-outline-primary rounded-pill"><i class="bi bi-plus-circle-fill"></i>&nbsp;&nbsp;Create Product</a>
            </div>
        </div>
        <table id="tblData" class="table table-bordered table-striped w-100">
            <thead>

                <tr>
                    <th>Title</th>
                    <th>ISBN</th>
                    <th>Price</th>
                    <th>Author</th>
                    <th>Category</th>
                    <!-- Buttons-->
                    <th></th>
                </tr>
            </thead>



            <tfoot class="my-3">
                <tr span="3"><td>&copy;Categories</td></tr>
            </tfoot>

        </table>
    </div>
</div>


@section Scripts{
    <script src="~/js/product.js"></script>
 }