@model IEnumerable<Category>;

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Category List</h2>
            </div>
        </div>
    </div>
    <div class="card-body ">
        <div class="row pt-2 pb-4">
           
            <div class="col-12 text-end">
                <a asp-area="Admin" asp-controller="Category" asp-action="Create" class="btn btn-outline-primary rounded-pill"><i class="bi bi-plus-circle-fill"></i>&nbsp;&nbsp;Create Category</a>
            </div>
        </div>
        <table class="table table-bordered table-striped w-100">
            <thead>

                <tr>
                    <th>Category Id</th>
                    <th>Category Name</th>
                    <th>Display Order</th>
                    <!-- Buttons-->
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model.OrderBy(u => u.DisplayOrder))
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.DisplayOrder</td>
                        <td>
                            <!-- Edit and Delete buttons -->
                            <div class="w-75 btn-group" role="group">
                                <a asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary rounded-pill mx-2"><i class="bi bi-pencil-square"></i>&nbsp;&nbsp;Edit</a>
                                <a asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger rounded-pill mx-2"><i class="bi bi-trash-fill"></i>&nbsp;&nbsp;Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>

            <tfoot class="my-3">
                <tr span="3"><td>&copy;Categories</td></tr>
            </tfoot>

        </table>
    </div>
</div>
