@model Category;

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body  p-4">
        <form asp-action="DeletePost" method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3 mt-4">
                <!-- Validation Summary-->
                @*<div asp-validation-summary="All" class="my-2 text-danger lead fs-6"></div>*@

                <!-- Category Name -->
                <div class="form-floating py-2 col-12">
                    <input class="form-control border-0 shadow" asp-for="Name" class="form-control" disabled />
                    <label class="ms-2" asp-for="Name" class="p-0"></label>
                </div>

                <!-- Display Order-->
                <div class="form-floating py-2 col-12">
                    <input class="form-control border bg-opacity-10 shadow" asp-for="DisplayOrder" class="form-control" disabled />
                    <label class="ms-2" asp-for="DisplayOrder" class="p-0"></label>
                </div>

                <!-- Submit button-->
                <div class="container row mt-4 text-center mx-auto">
                    <!-- Submit-->
                    <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary rounded-pill col-5 col-md-3">Back To list</a>
                    <!-- Back to index-->
                    <button type="submit" class="btn btn-danger px-3 rounded-pill ms-3  col-6 col-md-3">Delete</button>
                </div>

            </div>
        </form>

    </div>
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
 }